<Window x:Class="khelifi_taha_calculatrice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:khelifi_taha_calculatrice"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="400">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Background" Value="Tan"/>
                <Setter Property="FontSize" Value="38"/>
                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Style.Resources>
            </Style>
            <Style x:Key="MyStyle" TargetType="{x:Type Control}">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Background" Value="Green"/>
                <Setter Property="FontSize" Value="38"/>
                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Style.Resources>
            </Style>
            <Style x:Key="MyStyle2" TargetType="{x:Type Control}">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Background" Value="Purple"/>
                <Setter Property="FontSize" Value="38"/>
                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Style.Resources>
            </Style>
        </Grid.Resources>

        <TextBox Grid.Row="0" Grid.ColumnSpan="4" Name="TB_Resultat" Background="#FF4B6741" BorderBrush="#FF0C0C0C" BorderThickness="20,20,20,20" FontSize="24" FontWeight="Bold"></TextBox>
        <Button Grid.Row="1" Grid.Column="0" Name="BTN_1" Content="1" Click="BTN_1_Click"></Button>
        <Button Grid.Row="1" Grid.Column="1" Name="BTN_2" Content="2" Click="BTN_2_Click"></Button>
        <Button Grid.Row="1" Grid.Column="2" Name="BTN_3" Content="3" Click="BTN_3_Click"></Button>
        <Button Grid.Row="1" Grid.Column="3" Name="BTN_Plus" Style="{StaticResource MyStyle}" Content="+" Click="BTN_Plus_Click"></Button>
        <Button Grid.Row="2" Grid.Column="0" Name="BTN_4" Content="4" Click="BTN_4_Click"></Button>
        <Button Grid.Row="2" Grid.Column="1" Name="BTN_5" Content="5" Click="BTN_5_Click"></Button>
        <Button Grid.Row="2" Grid.Column="2" Name="BTN_6" Content="6" Click="BTN_6_Click"></Button>
        <Button Grid.Row="2" Grid.Column="3" Name="BTN_Moins" Style="{StaticResource MyStyle}" Content="-" Click="BTN_Moins_Click"></Button>
        <Button Grid.Row="3" Grid.Column="0" Name="BTN_7" Content="7" Click="BTN_7_Click"></Button>
        <Button Grid.Row="3" Grid.Column="1" Name="BTN_8" Content="8" Click="BTN_8_Click"></Button>
        <Button Grid.Row="3" Grid.Column="2" Name="BTN_9" Content="9" Click="BTN_9_Click"></Button>
        <Button Grid.Row="3" Grid.Column="3" Name="BTN_Fois" Content="*" Style="{StaticResource MyStyle}" Click="BTN_Fois_Click"></Button>
        <Button Grid.Row="4" Grid.Column="0" Name="BTN_0" Content="0" Click="BTN_0_Click"></Button>
        <Button Grid.Row="4" Grid.Column="1" Name="BTN_CLR" Content="CLR" Background="#FFC71B1B" Click="BTN_CLR_Click" Grid.ColumnSpan="2" Margin="10,10,10,10"></Button>
        <Button Grid.Row="5" Grid.Column="3" Name="BTN_Egale" Content="=" Background="#FF5FEBF5" Click="BTN_Egale_Click"></Button>
        <Button Grid.Row="4" Grid.Column="3" Name="BTN_Diviser" Content="/" Style="{StaticResource MyStyle}" Click="BTN_Diviser_Click"></Button>
        <Button Grid.Row="5" Grid.Column="0" Name="BTN_carré" Style="{StaticResource MyStyle2}" Content="x²" Click="BTN_carré_Click"></Button>
        <Button Grid.Row="5" Grid.Column="1" Name="BTN_racine" Style="{StaticResource MyStyle2}" Content="√" Click="BTN_racine_Click"></Button>
        <Button Grid.Row="5" Grid.Column="2" Name="BTN_pourcentage" Style="{StaticResource MyStyle2}" Content="%" Click="BTN_pourcentage_Click"></Button>
    </Grid>
        
</Window>